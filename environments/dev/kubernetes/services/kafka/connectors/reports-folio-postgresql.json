{
    "name": "reports-folio-postgresql",
    "config": {
        "database.history.kafka.bootstrap.servers": "kafka:9092",
        "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
        "slot.name": "folio_replication_slot",
        "tasks.max": "1",
        "internal.key.converter.schemas.enable": "false",
        "decimal.handling.mode": "double",
        "heartbeat.action.query": "INSERT INTO public.debezium_heartbeat (last_heartbeat_ts) VALUES (NOW());",
        "value.converter": "org.apache.kafka.connect.json.JsonConverter",
        "key.converter": "org.apache.kafka.connect.json.JsonConverter",
        "publication.autocreate.mode": "filtered",
        "database.dbname": "${file:/secrets/folio-db/secrets.yaml:dbname}",
        "database.user": "${file:/secrets/folio-db/secrets.yaml:username}",
        "database.server.name": "${file:/secrets/folio-db/secrets.yaml:dbname}",
        "database.hostname": "${file:/secrets/folio-db/secrets.yaml:hostname}",
        "database.password": "${file:/secrets/folio-db/secrets.yaml:password}",
        "database.port": "${file:/secrets/folio-db/secrets.yaml:port}",
        "time.precision.mode": "connect",
        "heartbeat.interval.ms": "30000",
        "plugin.name": "pgoutput",
        "internal.key.converter": "org.apache.kafka.connect.json.JsonConverter",
        "key.converter.schemas.enable": "false",
        "internal.value.converter.schemas.enable": "false",
        "internal.value.converter": "org.apache.kafka.connect.json.JsonConverter",
        "value.converter.schemas.enable": "false",
        "table.include.list": "public.folio_partition\\d\\d?, public.folioitem_partition\\d\\d?, public.folioitemdetail_partition\\d\\d?, public.foliotaxitemattributes_partition\\d\\d?, public.advanceddeposit, public.paidfolioitem, public.paymentdistribution, public.foliosummary_partition\\d\\d?, public.folioitemsummary_partition\\d\\d?, public.clientpartition",
        "message.key.columns": "public.folio_partition\\d\\d?:clientid;public.folioitem_partition\\d\\d?:clientid; public.folioitemdetail_partition\\d\\d?:clientid; public.foliosummary_partition\\d\\d?:clientid; public.folioitemsummary_partition\\d\\d?:clientid;public.foliotaxitemattributes_partition\\d\\d?:clientid;public.advanceddeposit:clientid; public.paidfolioitem:clientid; public.paymentdistribution:clientid;",
        "snapshot.mode": "never",
        "transforms": "Reroute",
        "transforms.Reroute.type": "io.debezium.transforms.ByLogicalTableRouter",
        "transforms.Reroute.topic.regex": "(.*)(!debezium)|(folio|advance|payment|client).*",
        "transforms.Reroute.topic.replacement": "folio.public.folios",
        "transforms.Reroute.key.enforce.uniqueness": "false",
        "topic.creation.default.replication.factor": 3,
        "topic.creation.default.partitions": 12,
        "errors.log.include.messages": "true",
        "errors.log.enable": "true",
        "tombstones.on.delete": "false"
    }
}
