{
    "name": "reports-guestprofile-postgresql",
    "config": {
        "database.history.kafka.bootstrap.servers": "kafka:9092",
        "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
        "slot.name": "guestprofile_replication_slot",
        "tasks.max": "1",
        "internal.key.converter.schemas.enable": "false",
        "decimal.handling.mode": "double",
        "heartbeat.action.query": "INSERT INTO debezium_heartbeat (heartbeat) VALUES ('thump')",
        "value.converter": "org.apache.kafka.connect.json.JsonConverter",
        "key.converter": "org.apache.kafka.connect.json.JsonConverter",
        "publication.autocreate.mode": "filtered",
        "database.dbname": "guestprofile",
        "database.user": "${file:/secrets/guestprofile-db/secrets.yaml:username}",  
        "time.precision.mode": "connect",
        "database.server.name": "guestprofile",
        "heartbeat.interval.ms": "30000",
        "database.port": "5432",
        "plugin.name": "pgoutput",
        "internal.key.converter": "org.apache.kafka.connect.json.JsonConverter",
        "key.converter.schemas.enable": "false",
        "database.hostname": "reservation-db.steblynskyi.com",
        "database.password": "${file:/secrets/guestprofile-db/secrets.yaml:password}",
        "internal.value.converter.schemas.enable": "false",
        "internal.value.converter": "org.apache.kafka.connect.json.JsonConverter",
        "value.converter.schemas.enable": "false",
        "table.include.list": "public.guestprofile, public.guestprofile_document, public.guestaddress",
        "snapshot.mode": "never",
        "transforms": "Reroute",
        "transforms.Reroute.type": "io.debezium.transforms.ByLogicalTableRouter",
        "transforms.Reroute.topic.regex": "(.*)(!debezium)|(guest).*",
        "transforms.Reroute.topic.replacement": "guestprofile.public.guestprofiles",
        "transforms.Reroute.key.enforce.uniqueness": "false",
        "topic.creation.default.replication.factor": 3,  
        "topic.creation.default.partitions": 5,
        "message.key.columns":"public.guestprofile:guestprofileid;public.guestprofile_document:guestprofileid;public.guestaddress:guestprofileid"
    }
}